module Header.MobilHeader exposing (view)

import Game.Options.CategoryView as CategoryView
import Html exposing (div, text)
import Html.Attributes as Html exposing (style)
import Html.Events exposing (onClick)
import Msg exposing (Msg(..))
import Svg
import Svg.Attributes exposing (clipRule, d, fill, fillRule, height, viewBox, width)
import View.Options exposing (gameStyleSelectorView)
import View.Theme as Theme exposing (Theme(..))


view model =
    let
        { class, selectedTheme, showTopics } =
            model

        fillColor =
            case selectedTheme |> Theme.normalizedTheme of
                Dark ->
                    "#E5E5E5"

                _ ->
                    "#545454"
    in
    div
        [ class "mobile-options-header"
        ]
        [ div [ class "category-mobile-wrapper", onClick ToggleTopics ]
            [ text "Topics"
            , div [ class "options-caret-container" ]
                [ caret fillColor
                ]
            , mobileTopics model
            ]
        , div [ class "options-icon", onClick ToggleOptions ]
            [ div [] [ gear fillColor ]
            , mobileOptions model
            ]
        ]


mobileOptions model =
    if model.showOptions then
        div [ model.class "mobile-menu mobile-options" ] [ gameStyleSelectorView model "game-selector-view-mobile" True ]

    else
        text ""


mobileTopics model =
    if model.showTopics then
        div [ model.class "mobile-menu mobile-topics" ]
            [ CategoryView.categoryView model "categoryWrapper-mobile" True
            ]

    else
        text ""



